<!-- offer area / offer banner starts -->
<div class="tm-section tm-offer-area tm-padding-section bg-grey">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 col-12 order-2 order-lg-1">
                <div class="tm-offer-content">
                    <!-- <h4>Super deal of the Month</h4> -->
                    <h2 class="special-offer-product" style="color: #9a0056; font-weight: 900;">Seven Day Sensation</h2>
                    <h1>Brand Diamond Finger Ring on 
                        <% if (offerBannerProduct.offerRef){
                            const offerProductMC = offerBannerProduct.makingCharge;
                            const offerPercentage = offerBannerProduct.offerRef.offerPercentage;
                            const offerAmount = offerProductMC * offerPercentage /100;
                            const totalPrice = offerBannerProduct.totalPrice;
                            const discountedPrice = totalPrice - offerAmount;
                            %>
                            <span>₹<%= Math.round(discountedPrice) %></span> only
                        <% } else { %>
                            <!-- amount without offer -->
                            <span>₹<%= Math.round(offerBannerProduct.totalPrice) %></span> only
                        <% } %>
                    </h1>

                    <% if (offerBannerProduct.offerRef){
                        <!-- Format the date to YYYY/MM/DD -->
                        let expiryDate = new Date(offerBannerProduct.offerRef.expiryDate);
                        let formattedExpiryDate = expiryDate.getFullYear() + '/' +
                        ('0' + (expiryDate.getMonth() + 1)).slice(-2) + '/' +
                        ('0' + expiryDate.getDate()).slice(-2);
                        %>
                        <div class="tm-countdown" data-countdown="<%= (formattedExpiryDate) %>"></div>
                    <% } else { %>
                        <!-- giving a dummy manual date -->
                        <div class="tm-countdown" data-countdown="2024/08/12"></div>
                    <% } %>
                    <a href="product-details?id=<%= offerBannerProduct._id %>" class="tm-button">Buy Now</a>
                </div>
            </div>
            <div class="col-lg-6 col-12 order-1 order-lg-2">
                <!-- IMAGE OPTION 1 -->
                <!-- <div class="tm-offer-image">
                    <img class="tm-offer"
                        data-pagespeed-lazy-src="assets/images/offerImages/frpdgen22373_1.png"
                        alt="offer image" src="assets/images/offerImages/frpdgen22373_1.png"
                        onload="pagespeed.lazyLoadImages.loadIfVisibleAndMaybeBeacon(this);"
                        onerror="this.onerror=null;pagespeed.lazyLoadImages.loadIfVisibleAndMaybeBeacon(this);">
                </div> -->

                <!-- VIDEO OPTION 1 -->
                <!-- <div class="tm-offer-image" style="position: relative; height: 100%;">
                    <video class="tm-offer" autoplay loop muted width=685px height=685px style="top: 0; height: 100%; width: auto;">
                        <source src="assets/images/offerImages/FRPDGEN22373.mp4" type="video/mp4">
                    </video>
                </div> -->

                <!-- VIDEO OPTION 2 -->
                <div class="tm-offer-image" style="position: relative;">
                    <video class="tm-offer" autoplay loop muted width=685px height=685px style="position: absolute; top: -117px;">
                        <source src="assets/images/offerImages/FRPDGEN22373.mp4" type="video/mp4">
                    </video>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- offer area / offer banner ends -->


