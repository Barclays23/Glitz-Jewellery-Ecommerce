                                            <th></th>
                                            <th></th>
                                            <th></th>

                                            <!-- payment status -->
                                            <tr>
                                                <td><b>Payment Status :</b></td>
                                                <% switch (orderData.orderedItems[i].paymentStatus) { 
                                                    case 'Pending': %>
