                                                <td><b>Product Status :</b></td>
                                                <% switch (orderData.orderedItems[i].productStatus) { 
                                                    case 'Not Applicable': %>
                                                        <td><span class="color-theme text-white bg-secondary">Not Applicable</span></td>
                                                    <% break; 
                                                    case 'Pending Confirmation': %>
                                                        <td><span class="color-theme text-white bg-warning">Pending Confirmation</span></td>
                                                    <% break; 
                                                    case 'Placed': %>
                                                            <td><span class="color-theme text-white bg-info">Order Placed</span></td>
                                                        <% break; 
                                                    case 'Confirmed': %>
                                                            <td><span class="color-theme text-white bg-info">Order Confirmed</span></td>
                                                        <% break; 
                                                    case 'Shipped': %>
                                                            <td><span class="color-theme text-white bg-primary">Item Shipped</span></td>
                                                        <% break; 
                                                    case 'Out for Delivery': %>
                                                            <td><span class="color-theme text-white bg-info">Out for Delivery</span></td>
                                                        <% break; 
                                                    case 'Delivered': %>
                                                            <td><span class="color-theme text-white bg-success">Delivered</span></td>
                                                        <% break; 
                                                    case 'Cancelled': %>
                                                            <td><span class="color-theme text-white bg-danger">Cancelled</span></td>
                                                        <% break;
                                                    case 'Return Requested': %>
                                                            <td><span class="color-theme text-white bg-dark">Return Requested</span></td>
                                                        <% break;
                                                    case 'Return Request Rejected': %>
                                                            <td><span class="color-theme text-white bg-dark">Return Request Rejected</span></td>
                                                        <% break;
                                                    case 'Return Request Accepted': %>
                                                            <td><span class="color-theme text-white bg-dark">Return Request Accepted</span></td>
                                                        <% break;
                                                    case 'Returned': %>
                                                            <td><span class="color-theme text-white bg-dark">Returned</span></td>
                                                        <% break;
                                                    default: %>
                                                        <td><span class="color-theme text-white bg-secondary">Unknown</span></td>
                                                <% } %>
                                            </tr>                                                                                                                                  
                                        </table>
                                        <table cellpadding="5">
                                            <tr>
                                                <td><b>Price Breakup :</b></td>
                                                <td style="width: 70px;"></td>
                                            </tr>
                                            <tr>
                                                <td>Metal Price</td>
