<%- include('../layouts/userLayouts/user-header.ejs') %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Internal Server Error - Glitz Jewellery Boutique</title>

    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #1a1a1a; /* Dark background */
            color: #f5f5f5; /* Light text color */
        }
        .container {
            border: 4px solid #AA0056;
            background-color: #333333; /* Dark gray for content background */
            color: #ffffff; /* Light text color */
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
            padding: 20px;
            border-radius: 10px;
            margin: 40px auto;
        }
        .header {
            background-color: #AA0056;
            text-align: center;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
            color: #fff; /* White text */
        }
        .header h2 {
            margin: 0;
            padding: 10px 0;
            color: white;
        }
        h1 {
            text-align: center;
            color: #f5f5f5;
            font-size: 80px;
        }
        h3 {
            text-align: center;
            color: #f5f5f5;
            font-size: 40px;
        }
        p {
            line-height: 1.6;
            margin-bottom: 20px;
            color: #cccccc; /* Lighter gray for paragraph text */
        }
        .oops {
            padding-bottom: 130px;
        }
        .response-area {
            margin-bottom: 40px;
        }
        .response-message {
            color: #858484;
        }
        .home-link {
            color: #ff4d94;
        }
        .footer {
            text-align: center;
            margin-top: 20px;
            color: #aaaaaa; /* Slightly lighter gray for footer text */
            font-size: 12px;
        }
        a {
            color: #ff4d94; /* Light pink color for links */
        }
        a:hover {
            color: #ffffff; /* Change link color on hover */
        }
    </style>

</head>


<body>
    <div class="container text-center">
        <div class="header">
            <h2> Internal Server Error | 500 </h2>
        </div>
        <br>
        <div class="">
            <h1> Oops! </h1>
            <h3> Something went wrong... </h3>
        </div>
        <div class="response-area">
            <h5 class="response-message"> We're sorry, but there was an internal server error while processing your request. </h5>
            <h5 class="response-message"> Please try again later or contact our support team for assistance. </h5>
            <h5 class="response-message"> <%= errorMessage ? errorMessage : '' %> </h5>
            <h5 class="mt-4 home-link"> <a href="/">Home</a></h5>
        </div>
    </div>
    <div class="footer">
        <p> This page was generated by Glitz Jewellery Boutique. If you need further assistance, please contact us. </p>
    </div>
</body>
</html>
