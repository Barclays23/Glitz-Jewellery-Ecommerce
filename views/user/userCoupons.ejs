<!-- script for date & time format -->
<%
function formatDate(dateString) {
    const date = new Date(dateString);
    const options = {
        day: '2-digit',
        month: 'long',
        year: 'numeric',
        hour: 'numeric',
        minute: 'numeric',
        second: 'numeric',
        timeZone: 'GMT',
    };
    return date.toLocaleDateString('en-GB', options);
}
%>






