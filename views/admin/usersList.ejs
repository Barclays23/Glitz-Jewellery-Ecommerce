<%- include('../layouts/adminLayouts/adminDashboardHeader.ejs') %>
<%- include('../layouts/adminLayouts/adminSidebarAndNavbar.ejs') %>




<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title" style="text-align: center">USERS LIST</h3>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    <div class="form-check form-check-muted m-0">
                                        <label class="form-check-label">
                                            <input type="checkbox" class="form-check-input" id="check-all">
                                        </label>
                                    </div>
                                </th>
                                <th> User Name </th>
                                <!-- <th> Photo </th> -->
                                <!-- <th> First Name </th> -->
                                <!-- <th> Last Name </th> -->
                                <th> Email Address </th>
                                <th> Mobile No </th>
                                <th> isVerified </th>
                                <!-- <th> Start Date </th> -->
                                <!-- <th> Payment Status </th> -->
                                <th> Actions </th>
                            </tr>
                        </thead>
                        <tbody>

                            <!-- ------------------------------------- -->
                            <% if (userData.length > 0){
                                for(let i=0; i<userData.length; i++){ %>
                                    <tr>

                                        <td>
                                            <div class="form-check form-check-muted m-0">
                                                <label class="form-check-label">
                                                    <input type="checkbox" class="form-check-input">
                                                </label>
                                            </div>
                                        </td>

                                        <td>
                                            <img src="../assets/images/userImages/faces/face1.jpg" alt="image" />
                                            <span class="ps-2"> <%= userData[i].firstname %> <%= userData[i].lastname %></span>
                                        </td>

                                        <!-- <td> <%= userData[i].photo %> </td> -->

                                        <!-- <td> <%= userData[i].firstname %> </td> -->

                                        <!-- <td> <%= userData[i].lastname %> </td> -->

                                        <td> <%= userData[i].email %> </td>

                                        <td> <%= userData[i].mobile %> </td>

                                        <% if(userData[i].isVerified === 1){ %>
                                            <td>
                                                <div class="badge badge-outline-success">Verified</div>
                                            </td>
                                        <% } else{ %>
                                            <td>
                                                <div class="badge badge-outline-danger">Not Verified</div>
                                            </td>
                                        <% } %>

                                        <td>
                                            <% if (userData[i].isBlocked == true){ %>
                                                <a href="#" class="badge badge-danger" id="blocked-user" style="text-decoration: none" onclick="manageUser('<%= userData[i]._id %>')">Blocked</a>
                                            <% }
                                            else{ %>
                                                <a href="#" class="badge badge-success" id="active-user" style="text-decoration: none" onclick="manageUser('<%= userData[i]._id %>')">Active</a>
                                            <% } %>
                                        </td>

                                    </tr>
                                <% }
                            }
                            else{ %>
                                <tr>
                                    <td colspan="6" style="text-align: center"></td>> No Users Found </td>
                                </tr>
                            <% } %>


                            <!-- ------------------------------------- -->

                            <!-- <tr>
                                <td>
                                    <div class="form-check form-check-muted m-0">
                                        <label class="form-check-label">
                                            <input type="checkbox" class="form-check-input">
                                        </label>
                                    </div>
                                </td>
                                <td>
                                    <img src="../assets/images/faces/face1.jpg" alt="image" />
                                    <span class="ps-2">Henry Klein</span>
                                </td>
                                <td> 02312 </td>
                                <td> $14,500 </td>
                                <td> Dashboard </td>
                                <td> Credit card </td>
                                <td> 04 Dec 2019 </td>
                                <td>
                                    <div class="badge badge-outline-success">Approved</div>
                                </td>
                            </tr> -->

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


