                                                data-start-date="<%= couponData[i].activationDate %>" 
                                                data-expiry-date="<%= couponData[i].expiryDate %>" 
                                                data-is-active="<%= couponData[i].isActive %>">
                                                Edit
                                            </a>
                                        </td>
                                    </tr>
                                <% }
                            }
                            else{ %>
                                <tr>
                                    <td colspan="11" style="text-align: center"><h4> No Coupons Found </h4></td>
                                </tr>
                            <% } %>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
