            } else if (criteriaAmount > 50000 && criteriaAmount <= 100000 && couponValue > 1000) {
                couponValueError.text('Maximum ₹1000 for criteria amount upto ₹100000.').show();
                isValid = false;
            } else if (criteriaAmount > 100000 && criteriaAmount <= 150000 && couponValue > 1500) {
                couponValueError.text('Maximum ₹1500 for criteria amount upto ₹150000.').show();
                isValid = false;
            } else if (criteriaAmount > 150000 && criteriaAmount < 200000 && couponValue > 2000) {
                couponValueError.text('Maximum ₹2000 for criteria amount upto ₹200000.').show();
                isValid = false;
            } else if (criteriaAmount >= 200000 && couponValue > criteriaAmount * 1.25 /100) {
                couponValueError.text('Maximum 1.25% of criteria amount ₹200000 & above.').show();
                isValid = false;
            } else if (couponValue > criteriaAmount) {
                couponValueError.text('Coupon value must be less than criteria amount.').show();
                isValid = false;
            } else {
                couponValueError.hide();
            }


            // Validate coupon count
            if (!couponCount){
                couponCountError.text('Coupon count is required.').show();
                isValid = false;
            } else if (isNaN(couponCount) || couponCount <= 0) {
                couponCountError.text('Coupon count should be a positive number.').show();
                isValid = false;
            } else {
                couponCountError.hide();
            }
            

            // Validate coupon dates
            if (expiryDate <= startDate) {
                expiryDateError.text('Expiry date should be after the start date.').show();
                isValid = false;
            } else {
                expiryDateError.hide();
            }

            if (isValid) {
                $.ajax({
                    type: 'PUT',
                    url: '/admin/edit-coupon',
                    data: JSON.stringify({
                        couponId,
                        couponName,
                        couponCode,
                        criteriaAmount,
                        couponValue,
                        startDate,
                        expiryDate,
                        couponCount,
                        isActive
                    }),
                    contentType: 'application/json',
                    success: function(response) {
                        if (response.updated) {
                            Swal.fire({
                                icon: 'success',
                                text: 'Coupon has been updated successfully.',
                                timer: 1500,
                                showConfirmButton: false
                            }).then(function() {
                                location.reload();
                            });
                        } else if (response.exist) {
                            Swal.fire({
                                icon: 'warning',
                                title: `<b> '${response.couponName}' </b> already exists.`,
                                html: `<h5 class= "text-danger"> Please check the coupon code or choose another name.</h5>`,
                                showConfirmButton: false
                            });
                        }
                    },
                    error: function(error) {
                        console.error('Error updating coupon:', error);
                        Swal.fire({
                            icon: 'error',
                            text: 'Error while updating coupon. Please try again.',
                            confirmButtonText: 'OK'
                        });
                    }
                });
            }
        });


        });




    });
</script>





